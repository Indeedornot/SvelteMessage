generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:dev.db"
}

//	id: string;
//	name: string;
//	avatar: string;
//	status: UserStatus;

model User {
    id        Int       @id @default(autoincrement())
    name      String
    avatar    String
    status    String
    messages  Message[]
    online    Boolean   @default(false)
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
}

//	id: string;
//	text: string;
//	timestamp: number;
//	sender: UserData;

model Message {
    id        Int      @id @default(autoincrement())
    text      String
    sender    User     @relation(fields: [senderId], references: [id])
    senderId  Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
